{
    "name": "ikiwiki",
    "id": "ikiwiki",
    "packaging_format": 1,
    "description": {
        "en": "An online bibliographic and quotations/notes management and article authoring system. ",
        "fr": "Expliquez en *quelques* (10~15) mots l'utilité de l'app ou ce qu'elle fait (l'objectif est de donner une idée grossière pour des utilisateurs qui naviguent dans un catalogue de 100+ apps)"
    },
    "version": "3.20200202.3-1~ynh1",
    "url": "http://ikiwiki.info",
    "license": "free",
    "maintainer": {
        "name": "John doe",
        "email": "john.doe@example.com",
        "url": "http://example.com"
    },
    "requirements": {
        "yunohost": ">= 3.5",
        "perl": ">= 5.10"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "git"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for ynhexample",
                    "fr": "Choisissez un nom de domaine pour ynhexample"
                },
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for ynhexample",
                    "fr": "Choisissez un chemin pour ynhexample"
                },
                "example": "/ikiwiki",
                "default": "/ikiwiki"
            },
            {
                "name": "admin",
                "type": "user",
                "ask": {
                    "en": "Choose an admin user",
                    "fr": "Choisissez l'administrateur"
                },
                "example": "johndoe"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?",
                    "fr": "Est-ce une application publique ?"
                },
                "default": true
            },
            {
                "name": "is_blog",
                "type": "boolean",
                "ask": {
                    "en": "Is it ment to be used as a blog ?",
                    "fr": "Est-ce un un blog?"
                },
                "default": false
            },
	    {
                "name": "is_wiki",
                "type": "boolean",
                "ask": {
                    "en": "Is it ment to be used as a wiki?",
                    "fr": "Est-ce un wiki?"
                },
                "default": true
            },

            {
                "name": "language",
                "type": "string",
                "ask": {
                    "en": "Choose the application language",
                    "fr": "Choisissez la langue de l'application"
                },
                "choices": ["fr", "en"],
                "default": "fr"
            },
            {
                "name": "password",
                "type": "password",
                "ask": {
                    "en": "Set the administrator password",
                    "fr": "Définissez le mot de passe administrateur"
                },
                "help": {
                    "en": "Use the help field to add an information for the admin about this question.",
                    "fr": "Utilisez le champ aide pour ajouter une information à l'intention de l'administrateur à propos de cette question."
                },
                "example": "Choose a password"
            }
        ]
    }
}
